{
	"compilerOptions": {
		"lib": ["es2022"],
		"module": "commonjs",
		"target": "es2022",
		"outDir": "distribution",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@library/*": ["source/library/*", "distribution/library/*"],
			"@schemas/*": ["source/schemas/*", "distribution/schemas/*"]
		},
		"typeRoots": ["node_modules/@types", "source/types"],
		"removeComments": true
	},
	"exclude": ["node_modules", "distribution/**/*"],
	"include": ["source/**/*"]
}